    "fuse.js": "^7.1.0",
    "js-yaml": "^4.1.1",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.9.1",
    "execa": "^9.4.0",
    "remark-cli": "^12.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.16"
  }
}
