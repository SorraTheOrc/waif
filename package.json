{
  "name": "waif",
  "version": "0.1.0",
  "description": "WAIF CLI scaffold (Workflow Alien Intelligence)",
  "bin": {
    "waif": "dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "eval \"$(direnv export bash)\" && tsc --project tsconfig.json",
    "start": "tsx src/index.ts",
