{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WAIF Action",
  "type": "object",
  "additionalProperties": false,
  "required": ["name", "runs"],
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "requires": { "type": "array", "items": { "type": "string" } },
    "safety": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "require_clean_worktree": { "type": "boolean" },
        "dry_run_support": { "type": "boolean" }
      }
    },
      "inputs": {
        "type": "object",
        "additionalProperties": {
          "type": "object",
          "properties": {
            "required": { "type": "boolean" },
            "description": { "type": "string" },
            "default": { "type": ["string", "number", "boolean", "null"] }
          },
          "additionalProperties": false
        }
      },
    "runs": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["type"],
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "shell",
              "bd",
              "noop",
              "git_ensure_branch",
              "bd_update_external_ref_if_empty",
              "bd_comments_ensure",
              "bd_update_status_if_not"
            ]
          },
          "cmd": { "type": "string" },
          "branch": { "type": "string" },
          "value": { "type": "string" },
          "text": { "type": "string" },
          "status": { "type": "string" }
        },
        "allOf": [
          {
            "if": { "properties": { "type": { "const": "shell" } } },
            "then": { "required": ["cmd"] }
          },
          {
            "if": { "properties": { "type": { "const": "bd" } } },
            "then": { "required": ["cmd"] }
          },
          {
            "if": { "properties": { "type": { "const": "git_ensure_branch" } } },
            "then": { "required": ["branch"] }
          },
          {
            "if": { "properties": { "type": { "const": "bd_update_external_ref_if_empty" } } },
            "then": { "required": ["value"] }
          },
          {
            "if": { "properties": { "type": { "const": "bd_comments_ensure" } } },
            "then": { "required": ["text"] }
          },
          {
            "if": { "properties": { "type": { "const": "bd_update_status_if_not" } } },
            "then": { "required": ["status"] }
          }
        ]
      }
    }
  }
}
